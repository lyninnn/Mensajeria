<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.mensajeriacliente.HelloController">
  <padding>
    <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
  </padding>

  <!-- Nombre de usuario -->
  <TextField fx:id="txtUsuario" promptText="Nombre de usuario" style="-fx-font-size: 14px; -fx-padding: 8px;" />

  <!-- Contraseña -->
  <PasswordField fx:id="txtPassword" promptText="Contraseña" style="-fx-font-size: 14px; -fx-padding: 8px;" />

  <!-- Botón para iniciar sesión -->
  <Button fx:id="btnLogin" text="Iniciar sesión" onAction="#iniciarSesion"
          style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px;" />

  <!-- Botón para registrar -->
  <Button fx:id="btnRegistrar" text="Registrar usuario" onAction="#registrarUsuario"
          style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px;" />
</VBox>

