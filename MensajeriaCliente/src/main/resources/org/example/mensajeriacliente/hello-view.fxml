<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.mensajeriacliente.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <TextField fx:id="txtUsuario" promptText="Nombre de usuario" />

  <!-- Password Field -->
  <PasswordField fx:id="txtPassword" promptText="Contraseña" />

  <!-- Buttons -->
  <Button fx:id="btnLogin" text="Iniciar sesión" onAction="#iniciarSesion"/>
  <Button fx:id="btnRegistrar" text="Registrar usuario" onAction="#registrarUsuario"/>
</VBox>
